        <!-- Pagination nav -->
    <div class="container">
        <div class="row p-3">

            <div class="col-sm-4 justify-content-end">
                <button type="button" id="backButton"
                class="btn btn-secondary rounded-pill shadow p-2 d-flex align-items-center justify-content-center">
                        <i class="material-icons mr-2" style="color:black">arrow_left
                        </i> <span class="" style="color:black">Back</span>
                </button>
            </div>

            <div class="col-sm-4">
            <% if(pages > 0) { %> <!--show pagination if there is pages -->
                <nav class="">
                    <ul class="pagination justify-content-center">
                        <!-- FIRST PAGE -->
                        <% if(current == 1) { %>
                            <li class="page-item disabled">
                                <a class="page-link bg-dark text-white" href="#">First</a>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a href="/articles?page=1" class="page-link bg-dark text-white-50">First</a>
                            </li>
                        <% } %>

                        <!-- PAGES -->
                        <% var i= (Number(current)) > 5 ? Number(current) - 4 : 1 } %>
                            <% if(i !==1) { %>
                                <li class="page-item disabled">
                                    <a class="page-link bg-dark text-white-50" href="#">...</a>
                                </li>
                            <% } %>

                        <% for(; i <=(Number(current) + 4) && i <=pages; i++ ) {%>
                            <% if(i==current) { %>
                                <li class="page-item active">
                                    <a class="page-link bg-dark text-white-50" href="/articles?page=<%= i %> ">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link bg-dark text-white-50" href="/articles?page=<%= i %> ">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } %>
                            <% if(i==Number(current) + 4 && i < pages) { %>
                                <li class="page-item disabled">
                                    <a class="page-link bg-dark text-white-50" href="#">...</a>
                                </li>
                            <% } %>
                        <% } %>

                        <!-- LAST PAGE -->
                        <% if(current == pages) { %>
                            <li class="page-item disabled">
                                <a class="page-link bg-dark text-white" href="#">
                                    Last
                                </a>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link bg-dark text-white-50" href="/articles?page=<%= pages %>">
                                    Last
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>

            <div class="col-sm-4 justify-content-start">
                <button type="button" id="nextButton"
                        class="btn btn-secondary rounded-pill shadow p-2 d-flex align-items-center justify-content-center">
                        <span class="" style="color:black">Next</span>
                        <i class="material-icons mr-2" style="color:black">arrow_right
                        </i> 
                </button>
            </div>

        </div>
    </div>


